<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # If the request is for an existing file, allow it to be downloaded
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # If the request is for an existing directory, allow it
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Otherwise, rewrite to index.php with id parameter
    RewriteRule ^(.+)$ index.php?id=$1 [QSA,L]
</IfModule>